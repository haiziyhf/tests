<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="Theme.Ltt.Customer" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:listViewStyle">@style/Widget.Styled.ListView</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="ToolbarStyle">
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlHighlight">@color/background</item>
    </style>

    <style name="Widget.Styled.ListView" parent="Widget.AppCompat.ListView">
        <item name="android:textColor">#FF0000</item>
        <item name="android:divider">@color/line</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="Widget.AppCompat.ActionBar.Solid" >
        <item name="android:background">@color/primary</item>
    </style>

</resources>